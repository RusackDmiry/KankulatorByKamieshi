<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kamieshi.com.kankulatorbykamieshi.MainWindowActivity">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_gravity="right"
                android:layout_span="2"

                android:layout_weight="1"
                android:gravity="right"
                android:text="0000000000000"
                android:textSize="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="0dp">


            <Button
                android:id="@+id/ButtonSin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"

                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="Sin"
                android:textSize="15dp"
                android:onClick="clickSin"
                />

            <Button
                android:id="@+id/ButtonCos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="cos"
                android:textSize="15dp"
                android:onClick="clickCos"
                />

            <Button
                android:id="@+id/ButtonSave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="15dp"
                android:onClick="ClickSave"
                />

            <Button
                android:id="@+id/ButtonClean"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="functionClick"
                android:text="Clean"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonRes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="ClickPast"
                android:text="Past"
                android:textSize="15dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <Button
                android:id="@+id/ButtonSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickSeven"
                android:text="7"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonEite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickEite"
                android:text="8"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickFNine"
                android:text="9"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonRoot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="√"
                android:textSize="15dp"
                android:onClick="ClickSrc"
                />

            <Button
                android:id="@+id/ButtonPlasMin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="±"
                android:textSize="15dp"
                android:onClick="ClickPlasMin"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <Button
                android:id="@+id/Buttonfore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickFore"
                android:text="4"
                android:textSize="15dp" />


            <Button
                android:id="@+id/ButtonFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickFive"
                android:text="5"
                android:textSize="15dp"

                />

            <Button
                android:id="@+id/ButtonSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickSix"
                android:text="6"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonSum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="15dp"
                android:onClick="ClickSumm"
                />

            <Button
                android:id="@+id/ButtonSubtraction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="----"
                android:textSize="15dp"
                android:onClick="CkickRazn"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/ButtonOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickOne"
                android:text="1"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickTwo"
                android:text="2"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickThree"
                android:text="3"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonMltioly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="15dp"
                android:onClick="ClickMultiplication"
                />

            <Button
                android:id="@+id/ButtonDivide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="15dp"
            android:onClick="ClickDivide"
            />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/ButtonPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clickPoint"
                android:text="."
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonNull"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="ClickZero"
                android:text="0"
                android:textSize="15dp" />

            <Button
                android:id="@+id/ButtonDPi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="Pi"
                android:textSize="15dp"
                android:onClick="ClickPi"
                />

            <Button
                android:id="@+id/ButtonPow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="^"
                android:textSize="15dp"
                android:onClick="ClickPow"
                />

            <Button
                android:id="@+id/ButtonRovn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="15dp"
                android:onClick="ClickSame"
                />


        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>
